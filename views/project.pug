extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box




        h1=project.project_name


        p=project.description

      .project-tech-links-box.box
        h6 Technologies
        ul

          
          each tech in project.technologies
            li=tech


        
        a.btn-link(href=`${project.live_link}`, target="_blank") Live Demo
        a.btn-link(href=`${project.github_link}`, target="_blank") GitHub Repo

    .project-img-box.box

      
      img.project-img(src=`/static/images/pjl${project.id}1.jpg`, alt='picure of project 1')
      img.project-img(src=`/static/images/pjl${project.id}2.jpg`, alt='picure of project 1')
      img.project-img(src=`/static/images/pjl${project.id}3.jpg`, alt='picure of project 1')
      //img.project-img(src='https://placehold.it/1200x550', alt='')
      //img.project-img(src='https://placehold.it/1200x550', alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
